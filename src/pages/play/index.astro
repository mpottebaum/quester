---
import Layout from '~/layouts/Layout.astro'
import questions from '~/mock-data/questions.json'
import { spawnRounds } from '~/utils/spawn-rounds'
import Game from '~/components/Game.svelte'

const rounds = spawnRounds(questions, 5)
---

<Layout title="Quizzard - Play">
  <main>
    <Game client:only="svelte" rounds={rounds} />
  </main>
</Layout>

<style>
  main {
    height: 100%;
  }
</style>
